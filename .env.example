# .env.example - шаблон для создания .env файла
# Скопируйте этот файл в .env и заполните значениями

POSTGRES_DB=hotel_booking_db

# Имя пользователя для подключения к PostgreSQL
POSTGRES_USER=booking_user

# Пароль пользователя PostgreSQL (замените на свой реальный пароль)
POSTGRES_PASSWORD=strong_password_123!

# Хост базы данных - в Docker-окружении обычно имя сервиса из docker-compose.yml
POSTGRES_HOST=db

# Порт, на котором работает PostgreSQL (стандартный порт 5432)
POSTGRES_PORT=5432

# Настройки Django
# Режим отладки: True для разработки, False для продакшена
DEBUG=True

# Секретный ключ Django - должен быть уникальным и сложным для безопасности
SECRET_KEY=djangoSECRET_KEY

# Разрешенные хосты для доступа к приложению (через запятую без пробелов)
ALLOWED_HOSTS=["localhost", "127.0.0.1", "0.0.0.0"]

# Дополнительные настройки (опционально)
# Часовой пояс приложения (Europe/Moscow для московского времени)
TIME_ZONE=Europe/Moscow

# Язык по умолчанию для интерфейса (ru-ru для русского языка в России)
LANGUAGE_CODE=ru-ru
